<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:media="clr-namespace:Avalonia.Media;assembly=Avalonia.Base">

    <Styles.Resources>
        <!-- Light Cyan Theme Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FFF8F9FA" />
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFFFF" />
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFFFF" />
        
        <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF00BCD4" Offset="0" />
            <GradientStop Color="#FF00ACC1" Offset="1" />
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="PrimaryHoverGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1DD4E1" Offset="0" />
            <GradientStop Color="#FF1BC1D1" Offset="1" />
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="SuccessGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF4CAF50" Offset="0" />
            <GradientStop Color="#FF45A049" Offset="1" />
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="SuccessHoverGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF5CBF60" Offset="0" />
            <GradientStop Color="#FF51B059" Offset="1" />
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF26C6DA" Offset="0" />
            <GradientStop Color="#FF00ACC1" Offset="1" />
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="AccentHoverGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF4FD7E1" Offset="0" />
            <GradientStop Color="#FF26BED4" Offset="1" />
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="WarningGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFF9800" Offset="0" />
            <GradientStop Color="#FFF57C00" Offset="1" />
        </LinearGradientBrush>
        
        <!-- Text Colors -->
        <SolidColorBrush x:Key="TextPrimaryBrush">#FF212529</SolidColorBrush>
        <SolidColorBrush x:Key="TextSecondaryBrush">#FF6C757D</SolidColorBrush>
        <SolidColorBrush x:Key="TextAccentBrush">#FF00BCD4</SolidColorBrush>
        <SolidColorBrush x:Key="TextDisabledBrush">#FFADB5BD</SolidColorBrush>
        
        <!-- Input Colors -->
        <SolidColorBrush x:Key="InputBackgroundBrush">#FFFFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="InputBorderBrush">#FFDEE2E6</SolidColorBrush>
        <SolidColorBrush x:Key="InputFocusBrush">#FF00BCD4</SolidColorBrush>
        
        <!-- Corner Radius -->
        <CornerRadius x:Key="CardCornerRadius">20</CornerRadius>
        <CornerRadius x:Key="ButtonCornerRadius">0</CornerRadius>
        <CornerRadius x:Key="InputCornerRadius">12</CornerRadius>
        
        <!-- Box Shadows -->
        <BoxShadows x:Key="CardShadow">0 8 24 0 #40000000</BoxShadows>
        <BoxShadows x:Key="ButtonShadow">0 4 12 0 #60000000</BoxShadows>
        <BoxShadows x:Key="GlowShadow">0 0 16 0 #8000D4FF</BoxShadows>
    </Styles.Resources>

    <!-- Window Background -->
    <Style Selector="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontFamily" Value="Inter, Segoe UI" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style Selector="UserControl">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontFamily" Value="Inter, Segoe UI" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Typography Styles -->
    <Style Selector="TextBlock.title">
        <Setter Property="FontSize" Value="42" />
        <Setter Property="FontWeight" Value="Black" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,15" />
    </Style>

    <Style Selector="TextBlock.subtitle">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextAccentBrush}" />
        <Setter Property="Margin" Value="0,0,0,40" />
    </Style>

    <Style Selector="TextBlock.page-title">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,20" />
    </Style>

    <Style Selector="TextBlock.section-header">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <Style Selector="TextBlock.field-label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <Style Selector="TextBlock.description">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style Selector="TextBlock.description.disabled">
        <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}" />
    </Style>

    <Style Selector="TextBlock.footer">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    </Style>

    <Style Selector="TextBlock.progress-text">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    </Style>

    <Style Selector="TextBlock.encouragement">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
    </Style>

    <Style Selector="TextBlock.details">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="LineHeight" Value="20" />
    </Style>

    <Style Selector="TextBlock.count">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Card Style -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{StaticResource CardBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}" />
        <Setter Property="Padding" Value="30,25" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BoxShadow" Value="0 2 8 0 #20000000" />
        <Setter Property="Opacity" Value="0.95" />
    </Style>
    
    <Style Selector="Border.card:pointerover">
        <Setter Property="Opacity" Value="1.0" />
        <Setter Property="BoxShadow" Value="0 0 12 0 #60000000" />
    </Style>

    <!-- Button Styles -->
    <Style Selector="Button">
        <Setter Property="CornerRadius" Value="{StaticResource ButtonCornerRadius}" />
        <Setter Property="Padding" Value="24,14" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontFamily" Value="Inter, Segoe UI" />
        <Setter Property="Background" Value="#FF2A2A30" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}"
                        ClipToBounds="True">
                    <ContentPresenter Name="PART_ContentPresenter"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      RecognizesAccessKey="True"
                                      HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                      TextBlock.Foreground="{TemplateBinding Foreground}"
                                      TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                      TextBlock.FontSize="{TemplateBinding FontSize}"
                                      TextBlock.FontWeight="{TemplateBinding FontWeight}"/>
                </Border>
            </ControlTemplate>
        </Setter>
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
                <BrushTransition Property="Background" Duration="0:0:0.2" />
                <DoubleTransition Property="Opacity" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.0)" />
    </Style>

    <Style Selector="Button:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)" />
        <Setter Property="Opacity" Value="0.9" />
    </Style>

    <Style Selector="Button.primary">
        <Setter Property="Background" Value="{StaticResource PrimaryGradientBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style Selector="Button.primary:pointerover">
        <Setter Property="Background" Value="{StaticResource PrimaryHoverGradientBrush}" />
    </Style>

    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="{StaticResource AccentGradientBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style Selector="Button.secondary:pointerover">
        <Setter Property="Background" Value="{StaticResource AccentHoverGradientBrush}" />
    </Style>

    <Style Selector="Button.accent">
        <Setter Property="Background" Value="#FFFF8B42" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style Selector="Button.accent:pointerover">
        <Setter Property="Background" Value="#FFFF9C53" />
    </Style>

    <Style Selector="Button.warning">
        <Setter Property="Background" Value="#FFFF7043" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style Selector="Button.warning:pointerover">
        <Setter Property="Background" Value="#FFFF8154" />
    </Style>

    <Style Selector="Button.disabled">
        <Setter Property="Background" Value="#FF404040" />
        <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}" />
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="ClipToBounds" Value="True" />
    </Style>

    <!-- Accessibility trade-off: hide focus ring for specific buttons showing corner artifacts -->
    <Style Selector="Button.nofocus">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="IsTabStop" Value="False" />
    </Style>

    <Style Selector="Button.large">
        <Setter Property="Padding" Value="32,18" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Black" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="ClipToBounds" Value="True" />
    </Style>

    <!-- Futuristic Button Styles -->
    <Style Selector="Button.futuristic">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF1A1A2E" Offset="0" />
                <GradientStop Color="#FF16213E" Offset="0.5" />
                <GradientStop Color="#FF0F1419" Offset="1" />
            </LinearGradientBrush>
        </Setter>
        <Setter Property="BorderBrush">
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#FF00D4FF" Offset="0" />
                <GradientStop Color="#FFFFDD59" Offset="0.5" />
                <GradientStop Color="#FFFF6B6B" Offset="1" />
            </LinearGradientBrush>
        </Setter>
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="12" />
    </Style>

    <Style Selector="Button.futuristic:pointerover">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF2A2A3E" Offset="0" />
                <GradientStop Color="#FF26314E" Offset="0.5" />
                <GradientStop Color="#FF1F2429" Offset="1" />
            </LinearGradientBrush>
        </Setter>
    </Style>

    <!-- Window Control Buttons -->
    <Style Selector="Button.window-control">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#FFB0B0B0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="2,0" />
    </Style>

    <Style Selector="Button.window-control:pointerover">
        <Setter Property="Background" Value="#FF404040" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.window-control.close:pointerover">
        <Setter Property="Background" Value="#FFFF4444" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <!-- Input Controls -->
    <Style Selector="TextBox.modern">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="{StaticResource InputCornerRadius}" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                <DoubleTransition Property="Opacity" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="TextBox.modern:focus">
        <Setter Property="BorderBrush" Value="{StaticResource InputFocusBrush}" />
    </Style>

    <Style Selector="TextBox.modern.multiline">
        <Setter Property="AcceptsReturn" Value="True" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
        <Setter Property="MinHeight" Value="100" />
    </Style>

    <Style Selector="ComboBox.modern">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="{StaticResource InputCornerRadius}" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style Selector="ComboBox.modern:focus">
        <Setter Property="BorderBrush" Value="{StaticResource InputFocusBrush}" />
    </Style>

    <Style Selector="DatePicker.modern">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="{StaticResource InputCornerRadius}" />
        <Setter Property="Padding" Value="16,12" />
    </Style>

    <!-- Progress Bar -->
    <Style Selector="ProgressBar.modern">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource SuccessGradientBrush}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Height" Value="24" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>

    <!-- Section Headers -->
    <Style Selector="TextBlock.section-header">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextAccentBrush}" />
    </Style>

    <Style Selector="TextBlock.page-title">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontWeight" Value="Black" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,25" />
    </Style>

    <Style Selector="TextBlock.encouragement">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource SuccessGradientBrush}" />
    </Style>

    <!-- DataGrid -->
    <Style Selector="DataGrid.modern">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="{StaticResource InputCornerRadius}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style Selector="DataGrid.compact">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="{StaticResource InputCornerRadius}" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <!-- ListBox -->
    <Style Selector="ListBox.files">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="{StaticResource InputCornerRadius}" />
        <Setter Property="Padding" Value="12" />
    </Style>

    <Style Selector="ListBox.compact">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="{StaticResource InputCornerRadius}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Padding" Value="12" />
    </Style>

    <!-- Field Labels -->
    <Style Selector="TextBlock.field-label">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style Selector="TextBlock.description">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="LineHeight" Value="22" />
    </Style>

    <Style Selector="TextBlock.progress-text">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource TextAccentBrush}" />
    </Style>

</Styles>