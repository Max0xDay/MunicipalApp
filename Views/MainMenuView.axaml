<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MunicipalApp.ViewModels"
             xmlns:media="clr-namespace:Avalonia.Media;assembly=Avalonia.Base"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="700"
             x:Class="MunicipalApp.Views.MainMenuView"
             x:DataType="vm:MainMenuViewModel">
    
    <Design.DataContext>
        <vm:MainMenuViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" Margin="40,30">
        
        <!-- Header with Accent Border -->
        <Border Grid.Row="0" 
                Background="Transparent" 
                CornerRadius="25"
                BorderThickness="3"
                HorizontalAlignment="Center"
                Padding="40,25">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF00BCD4" Offset="0" />
                    <GradientStop Color="#FF00ACC1" Offset="1" />
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.BoxShadow>0 0 20 0 #8000BCD4</Border.BoxShadow>
            <StackPanel HorizontalAlignment="Center" Spacing="15">
                <TextBlock Text="{Binding Title}" 
                           Classes="title"
                           TextAlignment="Center" />
                <TextBlock Text="{Binding Subtitle}" 
                           Classes="subtitle"
                           TextAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" 
                    Spacing="20" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxWidth="700">

            <!-- Report Issues Card -->
            <Border Classes="card">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.3">
                        <GradientStop Color="#FFFFFFFF" Offset="0" />
                        <GradientStop Color="#FFF8F9FA" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid ColumnDefinitions="220,*" Height="100">
                    <Button Grid.Column="0" 
                            Content="📝 Report Issues"
                            Classes="primary large"
                            Command="{Binding ReportIssuesCommand}" />
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="30,0,0,0">
                        <TextBlock Text="{Binding ReportIssuesTitle}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#FF00BCD4"
                                   Margin="0,0,0,5" />
                        <TextBlock Text="{Binding ReportIssuesDescription}"
                                   Classes="description"
                                   FontSize="13" />
                    </StackPanel>
                </Grid>
            </Border>

  
            <!-- Service Status Card -->
            <Border Classes="card">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.3">
                        <GradientStop Color="#FF1F1F23" Offset="0" />
                        <GradientStop Color="#FF3A2A2A" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid ColumnDefinitions="220,*" Height="100">
                    <Button Grid.Column="0" 
                            Content="⏳ Coming Soon"
                            Classes="accent large"
                            Command="{Binding ServiceStatusCommand}"
                            IsEnabled="False" />
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="30,0,0,0">
                        <TextBlock Text="{Binding ServiceStatusTitle}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#FFFF8E53"
                                   Margin="0,0,0,5" />
                        <TextBlock Text="{Binding ServiceStatusDescription}"
                                   Classes="description"
                                   FontSize="13"
                                   Opacity="0.7" />
                    </StackPanel>
                </Grid>
            </Border>

        </StackPanel>

        <!-- Footer -->
        <TextBlock Grid.Row="2" 
                   Text="{Binding Version}"
                   Classes="footer"
                   TextAlignment="Center"
                   Margin="0,20,0,0" />

    </Grid>
    
</UserControl>