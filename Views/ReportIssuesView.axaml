<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MunicipalApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="700"
             x:Class="MunicipalApp.Views.ReportIssuesView"
             x:DataType="vm:ReportIssuesViewModel">

    <Design.DataContext>
        <vm:ReportIssuesViewModel/>
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="40,30" Spacing="25" MaxWidth="800">
            
            <!-- Title -->
            <TextBlock Text="{Binding Title}" 
                       Classes="page-title"
                       TextAlignment="Center" />

            <!-- Progress Section -->
            <Border Classes="card">
                <StackPanel Spacing="15">
                    <ProgressBar Value="{Binding ProgressValue}" 
                                 Height="20"
                                 Classes="modern" />
                    <TextBlock Text="{Binding ProgressText}" 
                               Classes="progress-text" />
                    <TextBlock Text="{Binding EncouragementText}" 
                               Classes="encouragement" />
                </StackPanel>
            </Border>

            <!-- Form Fields -->
            <StackPanel Spacing="20">
                
                <!-- Location -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Location:" Classes="field-label" />
                    <TextBox Text="{Binding Location}" 
                             Watermark="Enter the location of the issue"
                             Classes="modern" />
                </StackPanel>

                <!-- Category -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Category:" Classes="field-label" />
                    <ComboBox SelectedItem="{Binding SelectedCategory}"
                              ItemsSource="{Binding Categories}"
                              PlaceholderText="Select a category"
                              Classes="modern" />
                </StackPanel>

                <!-- Description -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Description:" Classes="field-label" />
                    <TextBox Text="{Binding Description}" 
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="120"
                             Watermark="Describe the issue in detail"
                             Classes="modern multiline" />
                </StackPanel>

                <!-- File Attachments -->
                <StackPanel Spacing="8">
                    <TextBlock Text="File Attachments:" Classes="field-label" />
                    <Grid ColumnDefinitions="Auto,15,*,15,Auto">
            <Button Grid.Column="0" 
                Content="Attach Files"
                Command="{Binding AttachFilesCommand}"
                Classes="secondary nofocus" />
                        <ListBox Grid.Column="2" 
                                 ItemsSource="{Binding AttachedFiles}"
                                 Height="60"
                                 Classes="files" />
            <Button Grid.Column="4" 
                Content="Remove"
                Command="{Binding RemoveFileCommand}"
                CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ListBox}}"
                Classes="warning nofocus" />
                    </Grid>
                </StackPanel>

            </StackPanel>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,20,Auto" Margin="0,30,0,0">
        <Button Grid.Column="2" 
            Content="Submit Issue"
            Command="{Binding SubmitCommand}"
            Classes="primary large nofocus"
            IsEnabled="{Binding CanSubmit}" />
            </Grid>

        </StackPanel>
    </ScrollViewer>

</UserControl>