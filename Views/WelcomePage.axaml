<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MunicipalApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="700"
             x:Class="MunicipalApp.Views.WelcomePage"
             x:DataType="vm:WelcomePageViewModel">

    <Design.DataContext>
        <vm:WelcomePageViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto">
        <!-- Welcome Content -->
        <StackPanel Grid.Row="0" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Spacing="25"
                    MaxWidth="600"
                    Margin="40">
                
                <!-- Welcome Title -->
                <TextBlock Text="Welcome to Municipal Issue Reporting"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#333"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="500"/>
                
                <!-- Welcome Message -->
                <TextBlock Text="Help us improve our community by reporting issues you encounter. This wizard will guide you through the process step by step."
                           FontSize="16"
                           Foreground="#666"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           LineHeight="22"
                           MaxWidth="500"/>
                
                <!-- Steps Overview -->
                <Border Background="White" 
                        CornerRadius="20"
                        Padding="25"
                        Margin="10,0">
                    <StackPanel Spacing="15">
                        <TextBlock Text="What you'll need to provide:"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   TextAlignment="Center"/>
                        
                        <StackPanel Spacing="10">
                            <Grid ColumnDefinitions="Auto,15,*">
                                <TextBlock Grid.Column="0" Text="1." 
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#333"/>
                                <TextBlock Grid.Column="2" Text="Location of the issue" 
                                           FontSize="14"
                                           Foreground="#666"/>
                            </Grid>
                            
                            <Grid ColumnDefinitions="Auto,15,*">
                                <TextBlock Grid.Column="0" Text="2." 
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#333"/>
                                <TextBlock Grid.Column="2" Text="Category and detailed description" 
                                           FontSize="14"
                                           Foreground="#666"/>
                            </Grid>
                            
                            <Grid ColumnDefinitions="Auto,15,*">
                                <TextBlock Grid.Column="0" Text="3." 
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#333"/>
                                <TextBlock Grid.Column="2" Text="Photos to help us understand the issue" 
                                           FontSize="14"
                                           Foreground="#666"/>
                            </Grid>
                            
                            <Grid ColumnDefinitions="Auto,15,*">
                                <TextBlock Grid.Column="0" Text="4." 
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#333"/>
                                <TextBlock Grid.Column="2" Text="Review and submit your report" 
                                           FontSize="14"
                                           Foreground="#666"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Important Note -->
                <TextBlock Text="Please ensure you have a stable internet connection for location services."
                           FontSize="14"
                           Foreground="#666"
                           TextAlignment="Center"
                           FontStyle="Italic"
                           Margin="0,10,0,0"/>
            </StackPanel>
    </Grid>
</UserControl>