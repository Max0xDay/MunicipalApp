<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MunicipalApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="700"
             x:Class="MunicipalApp.Views.AdminReportForm"
             x:DataType="vm:AdminReportViewModel">

    <Design.DataContext>
        <vm:AdminReportViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="*,Auto"
              Margin="20,10,20,0">
            <StackPanel Grid.Column="0" Spacing="5">
                <TextBlock Text="Admin Dashboard" 
                           Classes="page-title"/>
                <TextBlock Text="Manage and view all reported issues" 
                           Classes="description"/>
            </StackPanel>
            
            <Button Grid.Column="1" 
                    Content="Refresh"
                    Command="{Binding RefreshCommand}"
                    Classes="secondary nofocus"
                    Padding="15,10"/>
        </Grid>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" 
              Margin="20,10,20,0"
              RowDefinitions="Auto,*">
            
            <!-- Search and Filter Section -->
            <Border Grid.Row="0" 
                    Classes="card"
                    Margin="0,0,0,10">
                <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                    <!-- Search Box -->
                    <TextBox Grid.Column="0"
                             Text="{Binding SearchText, Mode=TwoWay}"
                             Watermark="Search by location, category, or report number..."
                             Classes="modern"
                             Margin="0,0,10,0"/>
                    
                    <!-- Category Filter -->
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Categories}"
                              SelectedItem="{Binding SelectedCategory}"
                              PlaceholderText="All Categories"
                              Classes="modern"
                              Width="150"
                              Margin="0,0,10,0"/>
                    
                    <!-- Status Filter -->
                    <ComboBox Grid.Column="2"
                              ItemsSource="{Binding Statuses}"
                              SelectedItem="{Binding SelectedStatus}"
                              PlaceholderText="All Statuses"
                              Classes="modern"
                              Width="120"
                              Margin="0,0,10,0"/>
                    
                    <!-- Export Button -->
                    <Button Grid.Column="3"
                            Content="Export"
                            Command="{Binding ExportCommand}"
                            Classes="accent nofocus"
                            Padding="15,10"/>
                </Grid>
            </Border>
            
            <!-- Data Grid -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding FilteredIssues}"
                      SelectedItem="{Binding SelectedIssue}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Classes="modern"
                      GridLinesVisibility="All"
                      HeadersVisibility="All">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Report Number" 
                                        Binding="{Binding Id}"
                                        Width="150"/>
                    <DataGridTextColumn Header="Date" 
                                        Binding="{Binding DateReported, StringFormat='yyyy-MM-dd HH:mm'}"
                                        Width="140"/>
                    <DataGridTextColumn Header="Location" 
                                        Binding="{Binding Location}"
                                        Width="200"/>
                    <DataGridTextColumn Header="Category" 
                                        Binding="{Binding Category}"
                                        Width="120"/>
                    <DataGridTextColumn Header="Description" 
                                        Binding="{Binding Description}"
                                        Width="250"/>
                    <DataGridTextColumn Header="Status" 
                                        Binding="{Binding Status}"
                                        Width="100"/>
                    <DataGridTextColumn Header="Photos" 
                                        Binding="{Binding AttachedFiles.Count}"
                                        Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{StaticResource CardBrush}"
                BorderBrush="{StaticResource InputBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10"
                Margin="20,10,20,20">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusText}"
                           Classes="description"
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="1" 
                        Content="Update Status"
                        Command="{Binding UpdateStatusCommand}"
                        IsEnabled="{Binding HasSelectedIssue}"
                        Classes="secondary nofocus"
                        Padding="15,8"
                        Margin="10,0,5,0"/>
                
                <Button Grid.Column="2" 
                        Content="View Details"
                        Command="{Binding ViewDetailsCommand}"
                        IsEnabled="{Binding HasSelectedIssue}"
                        Classes="primary nofocus"
                        Padding="15,8"
                        Margin="0,0,5,0"/>
                
                <Button Grid.Column="3" 
                        Content="Close"
                        Command="{Binding CloseCommand}"
                        Classes="warning nofocus"
                        Padding="15,8"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>